---
interface Props {
    link: string
}

const { link } = Astro.props;
---
<a href={link} class="relative w-fit block text-black dark:text-white after:block after:content-[''] after:absolute after:h-[2px] after:bg-[#212121] after:dark:bg-white after:w-full after:scale-x-0 after:hover:scale-x-100 after:transition after:duration-300 duration-1000 after:origin-center after:rounded-full">
    <span class="flex flex-row items-center justify-center md:gap-x-1 lg:gap-x-2">
        <slot></slot>
    </span>
</a>