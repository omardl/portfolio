---
import LearningItem from "./EducationItem.astro"

import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const LEARNING = [
    {
        date: t('education.date.1'),
        img: '/teleco.webp',
        location: 'Vigo, Pontevedra',
        place: t('education.place.1'),
        title: t('education.title.1')
    },

    {
        date: t('education.date.2'),
        img: '/Farixa.webp',
        location: 'Orense',
        place: 'CIFP A Farixa',
        title: t('education.title.2')
    },
]
---

<ol class="relative border-s border-gray-200 dark:border-gray-700 ml-3">   
    {
        LEARNING.map(learning => (
            <li class="mb-10 ms-6">  
                <LearningItem {... learning} />
            </li>    
        ))
    }            
</ol>