---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class='flex justify-center items-center gap-x-4'>
    <div class="shadow-grid hover:shadow-grid-hover flex flex-row items-center p-6 border-[#212121] bg-[#212121] backdrop-blur-sm bg-opacity-40 rounded-3xl hover">
        <div class='flex flex-col justify-center py-4'>    
            <div class="[&>p>strong]:text-blue-300 [&>p>strong]:font-semibold text-pretty mx-2 my-2 hover:mx-4 duration-300"> 
                <p> <strong> {t('aboutme.p1.strongtext1')} </strong> {t('aboutme.p1.text1')} <strong>{t('aboutme.p1.strongtext2')} </strong> {t('aboutme.p1.text2')} <strong> {t('aboutme.p1.strongtext3')} </strong> </p>
            </div>
            <div class="[&>p>strong]:text-blue-300 [&>p>strong]:font-semibold text-pretty mx-2 my-2 hover:mx-4 duration-300"> 
                <p> <strong> {t('aboutme.p2.strongtext1')} </strong> {t('aboutme.p2.text1')} </p>
            </div>
            <div class="[&>p>strong]:text-blue-300 [&>p>strong]:font-semibold text-pretty mx-2 my-2 hover:mx-4 duration-300"> 
                <p> {t('aboutme.p3.text1')} <strong> {t('aboutme.p3.strongtext1')}  </strong> {t('aboutme.p3.text2')}  <strong> {t('aboutme.p3.strongtext2')}  </strong> </p>
            </div>
            <div class="[&>p>strong]:text-blue-300 [&>p>strong]:font-semibold text-pretty mx-2 my-2 hover:mx-4 duration-300"> 
                <p> <strong> {t('aboutme.p4.strongtext1')}  </strong> {t('aboutme.p4.text1')} <strong> {t('aboutme.p4.strongtext2')} </strong> </p>
            </div>
            <div class="[&>p>strong]:text-blue-300 [&>p>strong]:font-semibold text-pretty mx-2 my-2 hover:mx-4 duration-300"> 
                <p> {t('aboutme.p5.text1')} <strong> {t('aboutme.p5.strongtext1')} </strong> {t('aboutme.p5.text2')} <strong> {t('aboutme.p5.strongtext2')} </strong> </p>
            </div>
        </div>
        <img
            class="rounded-full size-64 bg-inherit hover:scale-105 duration-300"
            src="/programming.webp"
            alt="about me draw"
        />
    </div>
</section>


<section class="my-12">
    <div class="shadow-grid hover:shadow-grid-hover p-4 border-[#212121] bg-[#212121] backdrop-blur-sm bg-opacity-40 rounded-3xl">
        <span class="italic opacity-60"> {t('aboutme.phrase')} </span>
        <span class="italic pr-2 border-[#fff] border-r-2 animate-[typing_1s_ease-in-out_infinite]"> </span>
    </div>
</section>